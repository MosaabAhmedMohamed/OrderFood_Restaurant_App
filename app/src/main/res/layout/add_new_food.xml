<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:background="@color/text_color_dark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:text=""
            android:textColor="@color/text_color_bright"
            android:textColorHint="@color/text_color_bright"
            android:textSize="34sp"
            app:met_baseColor="@color/text_color_bright"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:met_primaryColor="@color/text_color_bright"
            app:met_singleLineEllipsis="true" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:text=""
            android:inputType="textMultiLine"
            android:textColor="@color/text_color_bright"
            android:textColorHint="@color/text_color_bright"
            android:textSize="24sp"
            app:met_baseColor="@color/text_color_bright"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@color/text_color_bright"
            app:met_singleLineEllipsis="true" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:text=""
            android:inputType="number"
            android:textColor="@color/text_color_bright"
            android:textColorHint="@color/text_color_bright"
            android:textSize="34sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:met_baseColor="@color/text_color_bright"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@color/text_color_bright"
            app:met_singleLineEllipsis="true" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount"
            android:text=""
            android:inputType="number"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/text_color_bright"
            android:textColorHint="@color/text_color_bright"
            android:textSize="34sp"
            app:met_baseColor="@color/text_color_bright"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@color/text_color_bright"
            app:met_singleLineEllipsis="true" />


        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:shadowRadius="4"
                android:text="SELECT"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/btn_shape"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtPassword"
                app:layout_constraintVertical_bias="1.0"
               />
            <Button
                android:id="@+id/btnUpload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"

                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:shadowRadius="4"
                android:text="UPLOAD"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/border_button_shape"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtPassword"
                app:layout_constraintVertical_bias="1.0"
               />

        </LinearLayout>
    </LinearLayout>





</android.support.v7.widget.CardView>